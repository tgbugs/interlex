[Unit]
Description=interlex alt gunicorn daemon
Requires=ilxalt.socket
After=network.target

[Service]
PIDFile=/run/ilxalt/pid
User=
Group=
RuntimeDirectory=ilxalt
WorkingDirectory=/home//alt/run
ExecStart=/home//.local/bin/pipenv run interlex-alt
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target
