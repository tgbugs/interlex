[Unit]
Description=interlex alt gunicorn daemon
Requires=ilxalt.socket
After=network.target

[Service]
PIDFile=/run/ilxalt/pid
User={interlex-user}
Group={interlex-user}
RuntimeDirectory=ilxalt
WorkingDirectory=/home/{interlex-user}/alt/run
ExecStart=/home/{interlex-user}/.local/bin/pipenv run interlex-alt
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target
